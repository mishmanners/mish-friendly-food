---
import DefaultLayout from "../layouts/Default.astro";
import languagesData from "../../_data/languages.json";
import databaseData from "../../_data/database.json";

const meta = {
	title: "Supported Languages | Mish Friendly Food",
	description:
		"View the list of languages currently supported by Mish Friendly Food for translating dietary requirements and allergies.",
};

// Get all supported language codes from the database
const supportedLangCodes = new Set();
if (databaseData.translations) {
	for (const [word, translations] of Object.entries(databaseData.translations)) {
		if (typeof translations === 'object' && translations !== null) {
			for (const langCode of Object.keys(translations)) {
				if (langCode !== 'category' && langCode !== 'synonyms') {
					supportedLangCodes.add(langCode);
				}
			}
		}
	}
}

// Map language codes to full names
const supportedLanguages = Array.from(supportedLangCodes)
	.map(code => {
		let name = languagesData[code];
		
		// Handle special cases not in languages.json
		if (!name) {
			if (code === 'en') name = 'English';
			else if (code === 'zh-Hant') name = 'Chinese (Traditional)';
			else if (code === 'nb') name = 'Norwegian BokmÃ¥l';
			else name = code.toUpperCase();
		}
		
		return { code, name };
	})
	.sort((a, b) => a.name.localeCompare(b.name));
---

<DefaultLayout {meta}>
	<h1>Supported Languages</h1>

	<p>
		Thanks to the contributions of our amazing community, Mish Friendly Food currently supports translations for <strong>{supportedLanguages.length} languages</strong>. 
		You can translate your dietary requirements and allergies when travelling into any of the languages listed here.
	</p>

	<p>
		If you'd like to add more languages or review existing translations, please check out our 
		<a href="/contributing">contribution guidelines</a>. We welcome contributions from native speakers 
		to ensure accuracy and cultural context.
	</p>

	<h2>Currently Supported Languages</h2>
	
	<ul class="languages-list">
		{supportedLanguages.map(lang => (
			<li>{lang.name}</li>
		))}
	</ul>

	<p class="note">
		Note: Some languages in the database may have been added and/or translated by automated tools and thus are awaiting review 
		by native speakers. If you notice any translation errors, please let us know by opening an Issue on GitHub or submit a correction via Pull Request.
	</p>
</DefaultLayout>

<style>
	.languages-list {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 0.5rem;
		margin: 2rem 0;
		padding-left: 0;
		list-style-position: inside;
	}

	.languages-list li {
		padding: 0.5rem;
		background-color: #f5f5f5;
		border-radius: 4px;
	}

	.note {
		font-style: italic;
		color: #666;
		margin-top: 2rem;
		padding: 1rem;
		background-color: #f9f9f9;
		border-left: 4px solid #ccc;
		border-radius: 4px;
	}

	h1, h2 {
		color: #333;
	}

	p {
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	a {
		color: #0066cc;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}
</style>
